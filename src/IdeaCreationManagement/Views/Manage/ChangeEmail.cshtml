@model IdeaCreationManagement.Models.ChangeEmailViewModel
@{
    ViewBag.Title = "Zmiana e-maila";
}

<h2>@ViewBag.Title</h2>
@using (Html.BeginForm("ChangeEmail", "Manage", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
        </div>
    </div>

            <div class="form-group">
                @Html.LabelFor(m => m.NewEmail, new { @class = "col-md-2 control-label" })
                <div class="col-md-10 text-color-fix-black">
                    @Html.EditorFor(m => m.NewEmail, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Zmień email" class="btn btn-default" />
                </div>
            </div>
            <div class="form-inline">
                @if (ViewBag.message != null)
                {
                    <div class="form-control form-group" style="color:red; font-size:x-large; background-color:white">
                        <div class="col-md-offset-4 col-md-4">
                            @ViewBag.Message
                        </div>
                    </div>
                }
            </div>
}
<div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
    <div class="container">
        <div>
            @Html.ActionLink("Powrót", "Index")
        </div>
    </div>
</div>
