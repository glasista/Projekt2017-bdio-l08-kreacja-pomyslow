@model IdeaCreationManagement.Models.Project

@{
    ViewBag.Title = "Szczegóły";
}

<h2>Szczegóły</h2>

<div>
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Title)
        </dd>
        
        <dt>
            @Html.DisplayNameFor(model => model.Assignee)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Assignee.Name) @Html.DisplayFor(model => model.Assignee.Surname)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Category.Name)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Category.Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Time)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Time)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.State.Name)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.State.Name)
        </dd>

        @if (String.Compare(Model.Type.ToString(), "Pomysł") == 0)
        {
            <dt>
                @Html.DisplayNameFor(model => model.AverageGrade)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.AverageGrade)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.AverageUsefulness)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.AverageUsefulness)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.AverageDifficulty)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.AverageDifficulty)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.AverageIngenuity)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.AverageIngenuity)
            </dd>
        }

        <dt>
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Powrót", "AllProjects", null, new { @class = "btn btn-xs btn-default" }) 
    @Html.ActionLink("Pliki", "FileIndex", "Files", new { projectId = Model.Id }, new { @class = "btn btn-xs btn-default" })
</p>
<p>
    @if (HttpContext.Current.User.Identity.IsAuthenticated)
    {
        if (((Dictionary<int, bool>)ViewBag.Gradable)[Model.Id])
        {

            @Html.ActionLink("Oceń", "Create", "Grades", new { Id = Model.Id }, new { @class = "btn btn-xs btn-default" })
        }
    }
</p>

