@model IdeaCreationManagement.Models.Project

@{
    ViewBag.Title = "Szczegóły";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Szczegóły projektu</h2>

<div class="panel-body">
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Title):
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Title)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Author):
        </dt>
        <dd> 
            @Html.DisplayFor(model => model.Author.UserName) @*@Html.DisplayFor(model => model.Author.Surname)*@      
            @Html.ActionLink("Szczegóły", "DetailsOnly2", "Users", new { id = Model.Author.Id }, new { @class = "btn btn-xs btn-default" })
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Category):
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Category.Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Time):
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Time)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.State):
        </dt>
        <dd>
            @Html.DisplayFor(model => model.State.Name) [@Html.ActionLink("Zmień",
                   "ChangeState",
                   new { projectId = Model.Id }
               )]
        </dd>

        @if (Model.Type == IdeaCreationManagement.Models.ProjectType.Pomysł)
        {
            <dt>
                @Html.DisplayNameFor(model => model.AverageGrade):
            </dt>
            <dd>
                @Html.DisplayFor(model => model.AverageGrade)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.AverageDifficulty):
            </dt>
            <dd>
                @Html.DisplayFor(model => model.AverageDifficulty)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.AverageIngenuity):
            </dt>
            <dd>
                @Html.DisplayFor(model => model.AverageIngenuity)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.AverageUsefulness):
            </dt>
            <dd>
                @Html.DisplayFor(model => model.AverageUsefulness)
            </dd>
        }
        <dt>
            @Html.DisplayNameFor(model => model.Description):
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>

    </dl>

    @Html.ActionLink("Wróć", "AssignedProjects", "Projects", null,
        new { @class = "btn btn-default" })
</div>
