@using IdeaCreationManagement.Models;
@model IEnumerable<IdeaCreationManagement.Models.Grade>

@{
    ViewBag.Title = "Dokonane oceny";
}

<h2>Dokonane oceny</h2>

<p>
    @Html.ActionLink("Nowa Ocena", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayName("Data")
        </th>
        <th>
            @Html.DisplayName("Przydatność")
        </th>
        <th>
            @Html.DisplayName("Poziom Trudności")
        </th>
        <th>
            @Html.DisplayName("Pomysłowość")
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Time)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UsefulnessValue)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DifficultyValue)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ingenuity)
            </td>
            <td>
                @Html.ActionLink("Edytuj", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Szczegóły", "Details", new { id = item.Id }) |
                @Html.ActionLink("Usuń", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>


