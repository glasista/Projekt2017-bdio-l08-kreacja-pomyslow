@model IEnumerable<IdeaCreationManagement.ViewModels.ListProject>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Category)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.State)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Author)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Assignee)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Category)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.State)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Author)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Assignee)
        </td>
        <td>
            @Html.ActionLink("Szczegóły", "Details", "Projects", new { id = item.Id }, new { @class = "btn btn-xs btn-default" })
            @if (ViewBag.ProjectsType != "created")
            {
                @Html.ActionLink("Odbierz przydział", "Deassign", new { id = item.AssigneeId, projectId = item.Id }, new { @class = "btn btn-xs btn-default" })
            }

        </td>
    </tr>
}

</table>
