@using IdeaCreationManagement.Models;
@model IEnumerable<IdeaCreationManagement.Models.Category>

@{
    ViewBag.Title = "Index";
}

@if (Model == null || !Model.Any())
{
    <h2>Brak kategorii</h2>
}
else
{
    if (ViewBag.category == ProjectType.Pomysł)
    {
        <h2>Kategorie pomysłów</h2>
    }
    else
    {
        <h2>Kategorie problemów</h2>
    }
    <p>
        @Html.ActionLink("Dodaj nową kategorię", "Create", null, new { @class = "btn btn-primary" })
    </p>
    <div class="col-md-10">
        @*@Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })*@
    </div>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.ActionLink("Edytuj", "Edit", new { id = item.Id }, new { @class = "btn btn-warning" })
                    @Html.ActionLink("Usuń", "Delete", new { id = item.Id }, new { @class = "btn btn-danger" })
                </td>
            </tr>
        }

    </table>
}