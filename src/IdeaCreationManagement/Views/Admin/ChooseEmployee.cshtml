@model IEnumerable<IdeaCreationManagement.Models.User>

@{
    ViewBag.Title = "ChooseEmployee";
}

<h2>Wybierz pracownika dla projektu: @ViewBag.Projects</h2>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Surname)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.OrganizationalUnit)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Category.Name)
        </th>
       
        

        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Surname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OrganizationalUnit.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category.Name)
            </td>
            <td>
                @Html.ActionLink("Wybierz Pracownika", "SetEmployee", new { id_e = item.Id  , id_p = ViewBag.ProjectID  })

            </td>
        <</tr>
    }
</table>
@Html.ActionLink("Wróć", "ViewProjects")




