@model IEnumerable<IdeaCreationManagement.Models.File>

@{
    ViewBag.Title = "Pliki";
}

<h2>Pliki</h2>

@if (Model == null || Model.Count() <= 0)
{
    <h4>Brak plików</h4>
}
else
{
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Project.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Size)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Project.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Size)
                </td>
                <td>
                    @Html.ActionLink("Pobierz", "Details", new { fileId = item.Id }, new { @class = "btn btn-xs btn-primary" })
                </td>
            </tr>
        }

    </table>
}

<p>
    @Html.ActionLink("Powrót", "AllProjects", "Projects", null, new { @class = "btn btn-xs btn-primary" })
</p>
